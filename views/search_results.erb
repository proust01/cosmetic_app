<h1 class="title">Search Results</h1>

<% @results.each_with_index do |e, index| %>

<div class="search">
        <div>
            <a href="/product/<%= e['id'] %>"><img class="cart_image" src=<%= e['image_link'] %> alt="image"></a>
        </div>
        <div>
            <h4><%= e['brand'] %></h4>
            <h6><%= e['name'] %></h6>
            <p>$ <%= e['price'] %></p>
        </div>

</div>

<% end %>