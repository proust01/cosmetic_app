<h1 class="product-info">Product Info</h1>
<div class="product-column">
    <article>
        <img class="product-image" src=<%= @result['image_link'] %> alt="img">
    </article>

    <aside>
        <h3><%= @result['brand'] %></h3>
        <h5><%= @result['name'] %></h5>
        <h6>$ <%= @result['price'] %></h6>
        <p>Ratings : <%= @result['rating'] %></p>
        <p>Category : <%= @result['category'] %></p>
        <p><%= @result['tag_list'] %></p>

        <form action="/product/<%= @result['id'] %>" method="post">  
            <button class="add-cart">Add to My Cart</button>
        </form>
    </aside>

</div>